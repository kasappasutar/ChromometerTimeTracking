* {
     box-sizing: border-box;
}

html, body{
    padding: 0;
    margin: 0;
    height: 100vh;
    width: 100%;
}

body{
    background: #FFF;
    color: #333;
    font-size: 16px;
    font-weight: 300;
    /*font-family: 'Helvetica Neue';*/
    font-family: Helvetica, Arial, Sans-Serif;
}

.app {
    display: flex;
    flex-flow: column wrap;
    height: 100vh;
    width: 100%;
}


.header {
    background: #387EF5;
    display: inline-block;
    height: 44px;
    width: 100%
}

.header .title {
    color: white;
    font-size: 2.5rem;
    margin:3px 0 0 20px;
    float:left;
    display:inline-block;    
}


.main {
    margin: 0 auto;
    max-width: 500px;
    width: 100%;
}

.display {
    color: #292929;
}

.display .state {
    display: block;
    font-size: 1.6rem;
    padding: 10px 0 0 0;
    color:#ccc;
    margin:0 auto;
    text-align: center;
}

.display .segments {
    align-items: center;
    display: flex;
    justify-content: center;
}

.display .mins,
.display .secs {
    color: #292929;
    font-size: 7rem;
}

.display .millis {
    font-size: 2rem;
    align-self: flex-end;
}

.actions {
    padding: 10px 0;
    display: block;
    margin:0 auto;
    text-align:center;
    
}

.actions .btn {
    margin: 0 5px;
}

.btn {
background: #387EF5;    
    border: solid 1px #387EF5;
    border-radius: 7px;
    color: white;
    cursor: pointer;
    font-size: 0.8em;    
    outline: none;
    padding: 10px 50px;
    transition: 300ms all;
    font-weight:600;
    text-transform:uppercase;
}

.btn:hover{
    opacity: 0.9;
}

.btn.disabled {
    opacity: 0.5;
}

.hidden { display:none;}

.header .view-link {
    color: white;
    font-size: 1.5rem;
    margin:10px 20px 0 0;
    float:right;
    display:inline-block;
}

.textbox {display:block; margin:0 auto; text-align:center;}

.m-t-md {margin-top:1.8em;}
.m-t-sm {margin-top:1.3em;}

.btn-success {   
    background-color: #1ab394;
    border-color: #1ab394;
    color: #FFFFFF;
}
.btn-success {
background-color: #18a689 !important;
    border-color: #18a689 !important;
    color: #FFFFFF !important;
}


